{
  "name": "onyx",
  "main": "src/app.tsx",
  "version": "0.0.1",
  "license": "AGPL-3.0-only",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "fix-llama": "sed -i '' 's|#import <ReactCommon/RCTTurboModule.h>|#import \"RCTTurboModule.h\"|' ios/build/generated/ios/RNLlamaSpec/RNLlamaSpec.h",
    "fix-llama:linux": "sed -i.bak 's|#import <ReactCommon/RCTTurboModule.h>|#import \"RCTTurboModule.h\"|' ios/build/generated/ios/RNLlamaSpec/RNLlamaSpec.h && rm ios/build/generated/ios/RNLlamaSpec/RNLlamaSpec.h.bak",
    "ios": "npx expo run:ios",
    "ios:fresh": "npx expo prebuild --platform ios --clean && cd ios && pod install && cd .. && yarn fix-llama && npx expo run:ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "lint": "expo lint",
    "build": "yarn build:ios:prod",
    "build:ios:dev": "eas build --profile development:device --platform ios --local",
    "build:ios:prod": "eas build --profile production --platform ios",
    "build:android:prod": "eas build --profile production --platform android",
    "build:android:apk": "eas build --profile production-apk --platform android",
    "prebuild:clean": "npx expo prebuild --clean --platform ios",
    "submit:ios": "eas submit -p ios",
    "t": "tsc --noEmit",
    "doctor": "npx expo-doctor",
    "copyrepo": "cd ~/code && node md.js ./onyx && cat combined.md | pbcopy",
    "eas-build-pre-install": "echo 'Running pre-install hook...'",
    "eas-build-post-install": "if [ \"$EAS_BUILD_PLATFORM\" = \"ios\" ]; then echo 'Running post-install hook for iOS...' && yarn fix-llama:linux; else echo 'Skipping post-install hook for non-iOS platform'; fi",
    "eas-build-on-success": "echo 'Build succeeded!'",
    "eas-build-on-error": "echo 'Build failed!'",
    "eas-build-on-complete": "echo 'Build completed!'",
    "eas-build-on-cancel": "echo 'Build was canceled!'"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@breeztech/react-native-breez-sdk-liquid": "^0.5.1",
    "@expo-google-fonts/jetbrains-mono": "^0.2.3",
    "@expo/metro-runtime": "~4.0.0",
    "@expo/vector-icons": "^14.0.2",
    "@flyerhq/react-native-chat-ui": "^1.4.3",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-clipboard/clipboard": "^1.15.0",
    "@react-navigation/bottom-tabs": "^7.0.0",
    "@react-navigation/native": "^7.0.0",
    "@react-navigation/native-stack": "^7.0.0",
    "@scure/base": "^1.1.1",
    "assert": "^1.1.1",
    "bech32": "^2.0.0",
    "bip32": "^5.0.0-rc.0",
    "bip39": "3.1.0",
    "expo": "~52.0.20",
    "expo-av": "~15.0.1",
    "expo-blur": "~14.0.1",
    "expo-constants": "~17.0.3",
    "expo-crypto": "~14.0.1",
    "expo-font": "~13.0.2",
    "expo-gl": "~15.0.2",
    "expo-haptics": "~14.0.0",
    "expo-linking": "~7.0.3",
    "expo-secure-store": "~14.0.0",
    "expo-splash-screen": "~0.29.18",
    "expo-status-bar": "~2.0.0",
    "expo-symbols": "~0.2.0",
    "expo-system-ui": "~4.0.6",
    "expo-web-browser": "~14.0.1",
    "llama.rn": "^0.4.3",
    "nostr-tools": "1.13.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.5",
    "react-native-blob-util": "^0.21.2",
    "react-native-document-picker": "^9.3.1",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.1.0",
    "react-native-web": "~0.19.13",
    "react-native-webview": "13.12.5",
    "text-encoding-polyfill": "^0.6.7",
    "three": "^0.171.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.12",
    "@types/react-test-renderer": "^18.3.0",
    "@types/three": "^0.170.0",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.2",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.3.3"
  },
  "private": true,
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "listUnknownPackages": false
      }
    }
  }
}
